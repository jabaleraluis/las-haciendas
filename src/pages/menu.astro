---
import Layout from "@layouts/Layout.astro";
import Products from "@components/structure/Products.astro";
import { products } from "src/scripts/products";

const sortedProducts = [...products].sort((a, b) => {
  const aDaily = a.tags?.includes("daily") ? 1 : 0;
  const bDaily = b.tags?.includes("daily") ? 1 : 0;

  return bDaily - aDaily;
});
---

